                <Menu mnemonicParsing="false" onAction="#handleActionLoadAnimation" text="Animations">
                    <items>
                        <RadioMenuItem mnemonicParsing="false" onAction="#handleActionLoadAnimation" styleClass="radio-menu-item" text="Open" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Charts">
                    <items>
                        <RadioMenuItem mnemonicParsing="false" onAction="#handleActionLoadCharts" styleClass="radio-menu-item" text="Open" />
                    </items>
                </Menu>
            </menus>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#handleActionClear" text="Clear" />
                    </items>
                </ContextMenu>
            </contextMenu>
        </MenuBar>
    </top>
</BorderPane>
